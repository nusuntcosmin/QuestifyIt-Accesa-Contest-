            <Font name="Rockwell" size="12.0" />
         </font>
      </Button>
      <TextField fx:id="rewardTextField" layoutX="32.0" layoutY="333.0" promptText="Reward" />
      <Label layoutX="32.0" layoutY="313.0" prefHeight="16.0" prefWidth="161.0" text="Reward ( token currency )">
         <font>
            <Font name="Rockwell" size="12.0" />
         </font>
      </Label>
      <Button fx:id="returnButton" layoutX="29.0" layoutY="21.0" mnemonicParsing="false" onMouseClicked="#returnButtonPressed" prefHeight="37.0" prefWidth="78.0" text="Return">
         <font>
            <Font name="Rockwell" size="12.0" />
         </font>
      </Button>
      <ImageView fitHeight="95.0" fitWidth="184.0" layoutX="467.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true">
