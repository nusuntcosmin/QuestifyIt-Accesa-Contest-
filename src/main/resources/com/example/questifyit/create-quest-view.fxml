            <Image url="@questifyit-logo-removebg-preview-removebg-preview-removebg-preview-removebg-preview.png" />
         </image>
      </ImageView>
      <Label fx:id="balanceLabel" layoutX="202.0" layoutY="337.0">
         <font>
            <Font name="Rockwell" size="12.0" />
         </font>
      </Label>
      <Label fx:id="warnLabel" layoutX="357.0" layoutY="149.0" prefHeight="102.0" prefWidth="117.0" textFill="RED">
         <font>
            <Font name="Rockwell" size="12.0" />
         </font>
      </Label>
      <TextArea fx:id="questDescriptionTextField" layoutX="28.0" layoutY="119.0" prefHeight="124.0" prefWidth="318.0" promptText="Quest description...">
         <font>
            <Font name="Rockwell" size="14.0" />
         </font>
      </TextArea>
