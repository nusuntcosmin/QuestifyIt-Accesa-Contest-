<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.questifyit.CreateQuestViewController">
   <children>
      <ImageView fitHeight="415.0" fitWidth="678.0">
         <image>
            <Image url="@4706614.jpg" />
         </image>
      </ImageView>
      <Ellipse fill="#fdfdfd" layoutX="75.0" layoutY="148.0" radiusX="100.0" radiusY="77.0" stroke="#ff000000" strokeType="INSIDE" />
      <Ellipse fill="#fdfdfd" layoutX="46.0" layoutY="312.0" radiusX="100.0" radiusY="123.0" stroke="#ff000000" strokeType="INSIDE" />
      <Ellipse fill="#fdfdfd" layoutX="233.0" layoutY="173.0" radiusX="105.0" radiusY="96.0" stroke="#ff000000" strokeType="INSIDE" />
      <Ellipse fill="#fdfdfd" layoutX="230.0" layoutY="325.0" radiusX="202.0" radiusY="136.0" stroke="#ff000000" strokeType="INSIDE" />
      <Ellipse fill="#fdfdfd" layoutX="357.0" layoutY="254.0" radiusX="169.0" radiusY="146.0" stroke="#ff000000" strokeType="INSIDE" />
      <TextField fx:id="answerTextField" layoutX="29.0" layoutY="276.0" prefHeight="28.0" prefWidth="318.0" promptText="Answer...">
         <font>
            <Font name="Rockwell" size="13.0" />
         </font>
      </TextField>
      <Label layoutX="29.0" layoutY="100.0" text="Quest task">
         <font>
            <Font name="Rockwell" size="12.0" />
         </font>
      </Label>
      <Label layoutX="29.0" layoutY="254.0" text="Expected answer">
         <font>
            <Font name="Rockwell" size="12.0" />
         </font>
      </Label>
      <Button fx:id="createQuestButton" layoutX="338.0" layoutY="321.0" mnemonicParsing="false" onMouseClicked="#createQuestButtonPressed" prefHeight="25.0" prefWidth="133.0" text="Create quest">
